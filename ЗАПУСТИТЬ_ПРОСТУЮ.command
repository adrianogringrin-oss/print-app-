#!/bin/bash
# Запуск простой консольной версии - работает всегда!

cd "$(dirname "$0")"

echo "Запуск простой версии программы..."
echo ""

# Используем системный Python
PYTHON_CMD="/usr/bin/python3"

# Запускаем консольную версию
"$PYTHON_CMD" ПРОСТОЙ_ЗАПУСК.py

if [ $? -ne 0 ]; then
    echo ""
    echo "Ошибка при запуске"
    read -p "Нажмите Enter для выхода..."
fi
